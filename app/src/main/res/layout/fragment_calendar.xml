<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.himanshu.mvvm.ui.home.calendar.CalendarViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10sp"
        android:gravity="center"
        android:layout_height="match_parent"
        tools:context=".ui.home.calendar.CalendarFragment">

        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="prev"
                android:padding="20sp"
                android:textColor="@color/black"
                android:backgroundTint="#00000000"
                android:onClick="@{viewModel::prevMonth}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:id="@+id/CurrentMonthName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={viewModel.calendarCurrentDate}"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:gravity="center"
                android:padding="20sp"
                android:text="next"
                android:textColor="@color/black"
                android:backgroundTint="#00000000"
                android:onClick="@{viewModel::nextMonth}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="18sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="18sp"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:padding="20dp"
            android:id="@+id/calendarRView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add"
            android:onClick="@{viewModel::navigateToAddEvent}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add"
            app:fabSize="normal" />

    </LinearLayout>
</layout>
